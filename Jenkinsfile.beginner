pipeline {
    agent any
    
    stages {
        // STAGE 1: Build Docker Image
        // This creates a Docker container with your app
        stage('ğŸ”¨ Build') {
            steps {
                echo 'ğŸ”¨ Building Docker image...'
                sh 'docker-compose build'
            }
        }
        
        // STAGE 2: Run Tests
        // This makes sure your code works correctly
        stage('ğŸ§ª Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'docker-compose run --rm web python manage.py test'
            }
        }
        
        // STAGE 3: Start the App
        // This actually runs your Django app
        stage('ğŸš€ Deploy') {
            steps {
                echo 'ğŸš€ Starting the application...'
                sh '''
                    docker-compose down
                    docker-compose up -d
                '''
            }
        }
        
        // STAGE 4: Check if it's Running
        // This verifies your app is accessible
        stage('âœ… Verify') {
            steps {
                echo 'âœ… Checking if app is running...'
                sh 'sleep 10'
                sh 'curl -f http://localhost:8000 || echo "App is starting..."'
            }
        }
    }
    
    // What to do when pipeline finishes
    post {
        success {
            echo 'âœ… SUCCESS! Your app is running at http://localhost:8000'
        }
        failure {
            echo 'âŒ Something went wrong. Check the logs above.'
        }
        always {
            echo 'ğŸ Pipeline finished!'
        }
    }
}